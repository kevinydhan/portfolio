{
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ES6",
      "jsx": "react",
      "allowJs": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "isolatedModules": true,
      "noEmit": true,
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ]
    },
    "include": [
      "utils/scripts"
    ],
    "exclude": [
      "node_modules",
      "src",
      "public"
    ]
  }
